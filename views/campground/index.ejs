<% include ../partials/header.ejs %>


<div class="container">
    <div class="jumbotron">
        <div class="container">

        
        <header>
            <h2>Welcome To Yelp Camp</h2>
            <p>View our handpicked campsites</p>
            <p><a href="/campgrounds/new" class="btn btn-primary">Add Campground</a></p>
        </header>
    </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 col-lg-3 col-xl-3">
                <div class="thumbnail">
                    <img src="<%= campground.image %>"  alt="">
                <div class="caption">
                        <%= campground.name %>
                </div>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary more">More Info</a>
            </div>
       
        
            </div>
        <% }) %>
        
    </div>

<!-- //container -->
</div>



   
        
            
            
        



