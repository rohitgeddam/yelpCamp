<% include ../partials/header.ejs %>
    <div class="container">
        <h1 style="text-align:center;">edit comment to <%= campgrounds.name %></h1>
        <div class="row">
            <div style="width:30%; margin:25px auto">
            <form action="/campgrounds/<%= campgrounds._id %>/edit/<%= comment._id%>?_method=put" method="post">
                
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment" value="<%= comment.text %>">
                </div>
                
               

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Comment!</button>
                </div>
                
            </form>
            <a href="/campgrounds/<%= campgrounds._id %>/">go back</a>
        </div>
            
        </div>

    </div>
